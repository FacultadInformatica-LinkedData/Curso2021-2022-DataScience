@prefix class:     <https://www.mapmadrid.org/ontologia/Clases/>.
@prefix prop:      <https://www.mapmadrid.org/ontologia/Propiedades/>.
@prefix rdf:       <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:      <http://www.w3.org/TR/rdf-schema/>.
@prefix schema:    <https://www.scheme.org/>.
@prefix xsd:       <https://www.w3.org/XMLSchema/>.
@prefix owl: <http://www.w3.org/2002/07/owl#>.

# Definición de la Ontologia
<https://www.mapmadrid.org/ontologia> a owl:Ontology.


### CLASSES #####
class:Localizacion  rdf:type owl:Class;
                    rdfs:label "Localizacion".

class:SitioCultural  rdf:type owl:Class;
                    rdfs:label "Sitio Cultural(Museos o Monumentos)".

class:Museo        rdf:type owl:Class;
                    rdfs:subClassOf class:SitioCultural;
                    rdfs:label "Museo".

class:Monumento      rdf:type owl:Class;
                    rdfs:subClassOf class:SitioCultural;
                    rdfs:label "Monumento".


# Este tipo representa el tipo o catégoria de museo
class:MuseoTipo    rdf:type owl:Class;
                    rdfs:label "Monumento Tipo".
                    
# Este tipo representa el tipo o catégoria de monumento
class:MonumentoTipo  rdf:type owl:Class;
                    rdfs:label "Monumento Tipo".

class:Barrio  rdf:type owl:Class;
              rdfs:label "Barrio ".

class:Distrito  rdf:type owl:Class;
                rdfs:label "Barrio ".
              

### Object Properties
prop:estaLocalizado      rdf:type owl:ObjectProperty;
                    rdfs:label "Localización de un sitio cultural";
                    rdfs:domain class:SitioCultural;
                    rdfs:range class:Localizacion.

prop:tieneCoordenadas rdf:type owl:ObjectProperty;
                    rdfs:label "Localización con coordenadas";
                    rdfs:domain class:Localizacion;
                    rdfs:range schema:GeoCoordinates.

prop:tieneDireccion     rdf:type owl:ObjectProperty;
                    rdfs:label "Dirección Postal de una Localización";
                    rdfs:domain class:Localizacion;
                    rdfs:range schema:PostalAddress.

prop:esTipo         rdf:type owl:ObjectProperty;
                    rdfs:label "Tipo de Museo";
                    rdfs:domain class:Museo;
                    rdfs:range class:MuseoTipo.

prop:esSubTipo      rdf:type owl:ObjectProperty;
                    rdfs:label "Subtipo de un  Monumento";
                    rdfs:domain class:Monumento;
                    rdfs:range class:MonumentoTipo.

prop:enDistrito     rdf:type owl:DatatypeProperty;
                    rdfs:label "is in District";
                    rdfs:domain class:Localizacion;
                    rdfs:range class:Distrito.

prop:enBarrio rdf:type owl:DatatypeProperty;
                    rdfs:label "is in Neighborhood";
                    rdfs:domain class:Localizacion;
                    rdfs:range class:Barrio.

### Data Properties


prop:tienePK          rdf:type owl:DatatypeProperty;
                    rdfs:label "Identificador PK del sitio cultural";
                    rdfs:domain class:SitioCultural;
                    rdfs:range xsd:positiveInteger.

prop:Descricion rdf:type owl:DatatypeProperty;
                    rdfs:label "Descripcion Edificio";
                    rdfs:domain class:SitioCultural;
                    rdfs:range xsd:string.

prop:creadoPor      rdf:type owl:DatatypeProperty;
                    rdfs:label "Autor del Monumento";
                    rdfs:domain class:Monumento;
                    rdfs:range xsd:string.

prop:extraInfo      rdf:type owl:DatatypeProperty;
                    rdfs:label "PDF con información";
                    rdfs:domain class:Monumento;
                    # Esto es una url pero lo tratamos como texto para el uso de aplicaciones
                    rdfs:range xsd:string.

prop:horasApertura   rdf:type owl:DatatypeProperty;
                    rdfs:label "Horas de Apertura";
                    rdfs:domain class:Museo;
                    rdfs:range xsd:string.

prop:trasnporteCercano  rdf:type owl:DatatypeProperty;
                    rdfs:label "Medios de Transporte cercanos";
                    rdfs:domain class:Museo;
                    rdfs:range xsd:string.

prop:TelefonoContacto rdf:type owl:DatatypeProperty;
                    rdfs:label "Telefono Contacto";
                    rdfs:domain class:Museo;
                    rdfs:range xsd:string.

prop:equipamiento      rdf:type owl:DatatypeProperty;
                    rdfs:label "Equipamiento u otros";
                    rdfs:domain class:Museo;
                    rdfs:range xsd:string.
                    
prop:tieneDescripcionEntidad   rdf:type owl:DatatypeProperty;
                    rdfs:label "Descripción de Entidad de un museo";
                    rdfs:domain class:Museo;
                    rdfs:range xsd:string.
                    
prop:emalContacto   rdf:type owl:DatatypeProperty;
                    rdfs:label "Email de Contacto";
                    rdfs:domain class:Museo;
                    rdfs:range xsd:string.

prop:fechaCreacion   rdf:type owl:DatatypeProperty;
                    rdfs:label "Año o Periodo de creación del Monumento";
                    rdfs:domain class:Monumento;
                    rdfs:range xsd:string.

prop:tieneNombre        rdf:type owl:DatatypeProperty;
                    rdfs:label "Nombre del Sitio";
                    rdfs:domain class:SitioCultural;
                    rdfs:range xsd:string.